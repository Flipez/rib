# add local library directory to $LOAD_PATH
$: << File.expand_path("../lib", __FILE__)

require 'rib/rib'

aibot = RIB::Bot.new

aibot.configure do |bot|
  # which protcoll to use? :irc or :xmpp
  bot.protocol = :irc
  # IRC/XMPP-Server to join? Example: irc.freenode.net
  bot.server = 'irc.quakenet.org'
  # Port of the Server to connect to
  bot.port = 6667
  # use ssl?
  #bot.ssl.use = false
  # verify ssl connection?
  #bot.ssl.verify = false
  # ca path to use
  #bot.ssl.ca_path = '/etc/ssl/certs'
  # host certificate
  #bot.ssl.client_cert = ''
  # Which nick to use?
  bot.nick = 'rubybot'
  # Which channel to join?
  bot.channel = '#rib'
  # XMPP: jid of user to login as
  #bot.jid = 'rubybot@xmpp.example.com'
  # Authentification command for IRC or passowrt for the XMPP user
  #bot.auth = 'Q@CServe.quakenet.org auth rubybot sEcReTpAsSwOrD'
  #bot.auth = 'ooph4aiseingohc3Phu2aexooxie5ialei7meibiu5ooNahneiphio8xi7eam3yo'
  # Character which triggers the bot to do something
  bot.tc = '!'
  # password for interacting with the bot 
  bot.password = 'rib'
  # Message when bot leaves
  bot.qmsg = 'See you later, shitlords!'
  # File for linkdumping. absolute or relative to main folder
  bot.linkdump = './yaylinks'
  # Link to linkdump blog
  bot.dumplink = 'https://www.linkdumpiorrrr.de'
  # Link to help page 
  bot.helplink = 'https://github.com/aibor/rib/wiki'
  # Print HTML-title of a posted url if set.
  bot.title = true
  # Appreciate ponies
  #bot.pony = false
end

aibot.run
